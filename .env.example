# OpenAI Provider Configuration
# Set to 'openai' for direct OpenAI API or 'azure' for Azure OpenAI
OPENAI_PROVIDER=openai

# ============================================
# DIRECT OPENAI API CONFIGURATION (DEFAULT)
# ============================================
# Required when OPENAI_PROVIDER=openai (or not set)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# AZURE OPENAI CONFIGURATION
# ============================================
# Required when OPENAI_PROVIDER=azure

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Your Azure OpenAI endpoint (without trailing slash)
# Example: https://your-resource-name.openai.azure.com
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com

# Azure deployment names for your models
AZURE_OPENAI_DEPLOYMENT_DALLE=dall-e-3
AZURE_OPENAI_DEPLOYMENT_GPT=gpt-4o

# Azure OpenAI API version (optional, defaults to 2024-02-01)
AZURE_OPENAI_API_VERSION=2024-02-01

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port for the server (optional, defaults to 3001)
PORT=3001